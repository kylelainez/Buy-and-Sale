<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%= title %></title>
		<link rel="stylesheet" href="/stylesheets/style.css" />
	</head>
	<body class="flex max-width justify">
		<%- include('../partials/header') %>
		<br />
		<% products.forEach(product => {%> <% if(product.quantity > 0){ %>
		<%if(`${user._id}` !== `${product.seller._id}`){ %>
		<a href="/product/<%= product._id %>">
			<div class="product flex-col">
				<img
					src="data:image/String;base64, 
                        <%= product.image.data.toString('base64')%>"
				/>
				<div class="content flex-col">
					<span><%= product.name %> </span>
					<span>$<%= product.price %> </span>
					<span><%= product.quantity %> pcs left</span>
				</div>
			</div>
		</a>
		<% } %> <% } %> <% }) %>
	</body>
</html>
